{
    "compilerOptions": {
        "module": "commonjs",
        "moduleResolution": "node",
        "target": "es6",
        "sourceMap": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "noImplicitAny": false
    },
    "exclude": [
      "node_modules",
      "typings"
    ],
    "filesGlob": [
      "**/*.ts",
      "typings/main",
      "typings/index.d.ts"
    ]
}
